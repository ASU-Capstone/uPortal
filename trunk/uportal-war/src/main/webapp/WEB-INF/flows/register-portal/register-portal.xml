<flow xmlns="http://www.springframework.org/schema/webflow" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
            
    <!-- Used to set default values for inputs -->
    <action-state id="initVariables">
        <evaluate result="flowScope.registrationRequest" expression="portalRegistrationHelper.createRegistrationRequest()" />

        <transition to="organizationInfoForm" />
    </action-state>
            
    <!-- Step 1 - organization info -->
    <view-state id="organizationInfoForm" model="registrationRequest">
        <transition on="next" to="systemInfoForm" />
    </view-state>
    
    <!-- Step 2 - system info -->        
    <view-state id="systemInfoForm" model="registrationRequest">
        <transition on="previous" to="organizationInfoForm" />
        <transition on="next" to="previewRegistrationDataMaximize" />
    </view-state>

    <!-- Entry into preview that maximizes the portlet -->    
    <action-state id="previewRegistrationDataMaximize">
        <evaluate expression="portletUrlFlowHelper.setWindowState(externalContext, 'maximized')" />
        <transition to="previewRegistrationData" />    
    </action-state>
    
    <!-- Step 3 - info review -->
    <view-state id="previewRegistrationData">
        <on-entry>
            <evaluate result="flowScope.registrationData" expression="portalRegistrationHelper.getRegistrationData(registrationRequest)" />
        </on-entry>
        
        <transition on="editRegistration" to="organizationInfoForm" />
        <transition on="submitRegistration" to="submitRegistration" /> 
    </view-state>

    <!-- submit data from preview -->
    <decision-state id="submitRegistration">
        <on-entry>
            <evaluate result="requestScope.submitStatus" expression="portalRegistrationHelper.submitRegistration(registrationData)" />
        </on-entry>
        
        <if test="requestScope.submitStatus" then="registrationSuccess" else="registrationFailed" />
    </decision-state>
    
    <view-state id="registrationSuccess">
        <transition on="registrationForm" to="organizationInfoForm" />
    </view-state>
    
    <view-state id="registrationFailed">
        <transition on="registrationForm" to="organizationInfoForm" />
    </view-state>
</flow>
