<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans" 
       xmlns:util="http://www.springframework.org/schema/util"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.1.xsd">
    
    <!-- 
     | The concrete IPersonManager implementation to be used
     +-->
   	<bean id="personManager" class="org.jasig.portal.security.provider.SimplePersonManager" />


    <util:map id="profileKeyMappings">
        <entry key="desktop" value="default"/>
        <entry key="mobile" value="mobileDefault"/>
    </util:map>

    <bean id="profileMapper" class="org.jasig.portal.layout.ChainingProfileMapperImpl">
        <property name="defaultProfileName" value="default" />
        <property name="subMappers">
            <util:list>
                <bean class="org.jasig.portal.layout.SessionAttributeProfileMapperImpl"
                    p:mappings-ref="profileKeyMappings"/>
                <bean class="org.jasig.portal.layout.UserAgentProfileMapper">
                    <property name="mappings">
                        <list>
                            <!-- Apple iPad -->
                            <bean class="org.jasig.portal.layout.UserAgentProfileMapper.Mapping">
                                <property name="pattern" value=".*iPad.*" />
                                <property name="profileName" value="default" />
                            </bean>
                            <!-- Apple iPhone -->
                            <bean class="org.jasig.portal.layout.UserAgentProfileMapper.Mapping">
                                <property name="pattern" value=".*iPhone.*" />
                                <property name="profileName" value="mobileDefault" />
                            </bean>
                            <!-- Android -->
                            <bean class="org.jasig.portal.layout.UserAgentProfileMapper.Mapping">
                                <property name="pattern" value=".*Android.*Mobile.*" />
                                <property name="profileName" value="mobileDefault" />
                            </bean>
                            <!-- Palm Pre -->
                            <bean class="org.jasig.portal.layout.UserAgentProfileMapper.Mapping">
                                <property name="pattern" value=".*Safari.*Pre.*" />
                                <property name="profileName" value="mobileDefault" />
                            </bean>
                            <!-- Nokia S60 web browser -->
                            <bean class="org.jasig.portal.layout.UserAgentProfileMapper.Mapping">
                                <property name="pattern" value=".*Nokia.*AppleWebKit.*" />
                                <property name="profileName" value="mobileDefault" />
                            </bean>
                            <!-- Blackberry web browser -->
                            <bean class="org.jasig.portal.layout.UserAgentProfileMapper.Mapping">
                                <property name="pattern" value=".*Black[Bb]erry.*" />
                                <property name="profileName" value="mobileDefault" />
                            </bean>
                            <!-- Opera Mobile web browser -->
                            <bean class="org.jasig.portal.layout.UserAgentProfileMapper.Mapping">
                                <property name="pattern" value=".*Opera Mobile.*" />
                                <property name="profileName" value="mobileDefault" />
                            </bean>
                        </list>
                    </property>
                </bean>
            </util:list>
        </property>
    </bean>

    <util:list id="directoryQueryAttributes">
        <value>givenName</value>
        <value>sn</value>
    </util:list>

    <util:map id="directoryDisplayAttributes">
        <entry key="title" value="GENERIC"/>
        <entry key="department" value="GENERIC"/>
        <entry key="organization" value="GENERIC"/>
        <entry key="mail" value="EMAIL"/>
        <entry key="telephoneNumber" value="PHONE"/>
        <entry key="postalAddress" value="MAP"/>
    </util:map>

    <!-- Form inputs for local account editing.  These fields will be filtered
        according to user permissions. -->
    <util:list id="accountEditAttributes">
        <bean class="org.jasig.portal.portlets.account.PreferenceInputFactory"
            factory-method="createSingleTextPreference">
            <constructor-arg value="title"/>
            <constructor-arg value="attribute.displayName.title"/>
        </bean>
        <bean class="org.jasig.portal.portlets.account.PreferenceInputFactory"
            factory-method="createSingleTextPreference">
            <constructor-arg value="department"/>
            <constructor-arg value="attribute.displayName.department"/>
        </bean>
        <bean class="org.jasig.portal.portlets.account.PreferenceInputFactory"
            factory-method="createSingleTextPreference">
            <constructor-arg value="organization"/>
            <constructor-arg value="attribute.displayName.organization"/>
        </bean>
        <bean class="org.jasig.portal.portlets.account.PreferenceInputFactory"
            factory-method="createSingleTextPreference">
            <constructor-arg value="mail"/>
            <constructor-arg value="attribute.displayName.mail"/>
        </bean>
        <bean class="org.jasig.portal.portlets.account.PreferenceInputFactory"
            factory-method="createSingleTextPreference">
            <constructor-arg value="telephoneNumber"/>
            <constructor-arg value="attribute.displayName.telephoneNumber"/>
        </bean>
        
        <!-- 
         | Attributes for SSP Permissions:
         | These attributes place users in PAGS groups, which are themselves 
         | members of similarly-named database (local) groups.  The local groups 
         | are referenced using <security-role-ref> elements in the SSP portlet 
         | app.
         +-->
        <bean class="org.jasig.portal.portlets.account.PreferenceInputFactory"
            factory-method="createMultiChoicePreference">

			<!-- String name -->
            <constructor-arg value="sspRole"/>

			<!-- String label (optionally a key for messages.properties) -->
            <constructor-arg value="SSP Role(s)"/>

			<!-- MultiChoiceDisplay displayType -->
            <constructor-arg value="CHECKBOX"/>

			<!-- List<Option> options -->
            <constructor-arg>
            	<list>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Academic Counselor or Advisor" />
            			<property name="value" value="sspRoleAcademicCounselorOrAdvisor" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Counselor" />
            			<property name="value" value="sspRoleCounselor" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Faculty" />
            			<property name="value" value="sspRoleFaculty" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Developer" />
            			<property name="value" value="sspRoleDeveloper" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Management" />
            			<property name="value" value="sspRoleManagement" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Super User" />
            			<property name="value" value="sspRoleSuperUser" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Support Staff" />
            			<property name="value" value="sspRoleSupportStaff" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Student" />
            			<property name="value" value="sspRoleStudent" />
            		</bean>
            	</list>
            </constructor-arg>
            
            <!-- List<String> defaultValues -->
            <constructor-arg>
            	<list /><!-- none -->
            </constructor-arg>
        </bean>
        <bean class="org.jasig.portal.portlets.account.PreferenceInputFactory"
            factory-method="createMultiChoicePreference">

			<!-- String name -->
            <constructor-arg value="sspAccess"/>

			<!-- String label (optionally a key for messages.properties) -->
            <constructor-arg value="SSP Special Access"/>

			<!-- MultiChoiceDisplay displayType -->
            <constructor-arg value="CHECKBOX"/>

			<!-- List<Option> options -->
            <constructor-arg>
            	<list>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Academic Resource Center" />
            			<property name="value" value="sspAccessAcademicResourceCenter" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Counseling Services" />
            			<property name="value" value="sspAccessCounselingServices" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Disability" />
            			<property name="value" value="sspAccessDisability" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Displaced Workers" />
            			<property name="value" value="sspAccessDisplacedWorkers" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Early Alert" />
            			<property name="value" value="sspAccessEarlyAlert" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="English as a Second Language" />
            			<property name="value" value="sspAccessEnglishAsSecondLanguage" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Fast Forward" />
            			<property name="value" value="sspAccessFastForward" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Individualized Learning Plan" />
            			<property name="value" value="sspAccessIndividualizedLearningPlan" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Manager" />
            			<property name="value" value="sspAccessManager" />
            		</bean>
            		<bean class="org.jasig.portal.portletpublishing.xml.Option">
            			<property name="label" value="Staff" />
            			<property name="value" value="sspAccessStaff" />
            		</bean>
            	</list>
            </constructor-arg>
            
            <!-- List<String> defaultValues -->
            <constructor-arg>
            	<list /><!-- none -->
            </constructor-arg>
        </bean>

    </util:list>
    
    <!-- Spring mail-sending service -->
    <bean id="passwordResetMailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
        <property name="host" value="${org.jasig.portal.email.host:localhost}" />
        <property name="port" value="${org.jasig.portal.email.port:25}" />
        <property name="protocol" value="${org.jasig.portal.email.protocol:smtp}" />
    </bean>
    
    <bean id="portalEmailAddress" class="java.lang.String">
        <constructor-arg value="${org.jasig.portal.email.fromAddress}"/>
    </bean>
    
</beans>
