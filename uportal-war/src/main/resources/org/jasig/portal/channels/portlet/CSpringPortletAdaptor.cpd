<channelDef>

  <description>
    This is an adapter that makes a Portlet look like a Channel.
  </description>

  <class>org.jasig.portal.channels.portlet.CSpringPortletAdaptor</class>

  <params>
    <step>
      <ID>1</ID>

      <name>Portlet Descriptor</name>

      <description>
        Enter the Portlet web-application path and portlet name.
      </description>

      <parameter modify="publish-only">
        <name>isFrameworkPortlet</name>
        <label>Framework Portlet</label>
        <type base="string" input="single-choice" display="drop-down">
            <restriction type="enumeration">
                <value>false</value>
                <value>true</value>
            </restriction>
        </type>
        <defaultValue>false</defaultValue>
        <example>false</example>
        <description>
          Portlet is deployed in the same web-application as uPortal. If checked "Portlet Web Application Path"
          is ignored.
        </description>
      </parameter>

      <parameter modify="publish-only">
        <name>portletApplicationId</name>
        <label>Portlet Web Application Path</label>
        <type base="string" input="text" display="text">
          <length>40</length>
          <maxlength>2000</maxlength>
        </type>
        <example>/pluto-testsuite</example>
        <description>
          This is the name of the web application the portlet resides in including a preceding /.
        </description>
      </parameter>
      
      <parameter modify="publish-only">
        <name>portletName</name>
        <label>Portlet Name</label>
        <type base="string" input="text" display="text">
          <length>40</length>
          <maxlength>2000</maxlength>
        </type>
        <example>test-port-et-1</example>
        <description>
          This is the name of the portlet as defined in the portlet.xml descriptor.
        </description>
      </parameter>

    </step>

    <step>
      <ID>2</ID>
      
      <name>Portlet Titles</name>
      
      <parameter modify="publish-only">
        <name>disableDynamicTitle</name>
        <label>Disable Dynamic Title</label>
        <type base="string" input="single-choice" display="drop-down">
            <restriction type="enumeration">
                <value>false</value>
                <value>true</value>
            </restriction>
        </type>
        <defaultValue>true</defaultValue>
        <example>true</example>
        <description>
          Disable dynamic portlet titles.
        </description>
      </parameter>

    </step>

    <step>
      <ID>3</ID>

      <name>Portlet Preferences</name>

      <description>
        These are the preferences of the portlet itself.  There may
        be zero or more preferences.
      </description>

      <arbitrary-preferences>true</arbitrary-preferences>

    </step>

  </params>

  <controls>
    <control type="edit" include="no" override="yes"/>
    <control type="help" include="no" override="yes"/>
  </controls>

</channelDef>
