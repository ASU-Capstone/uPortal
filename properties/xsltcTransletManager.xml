<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<beans>
    <!-- 
     |
     +-->
    <bean id="xsltcTransletManager" class="org.jasig.portal.utils.XsltcTransletManager" singleton="true" lazy-init="true">
        <property name="activated"><value>false</value></property>
        <property name="debug"><value>false</value></property>
        <property name="packageName"><value>translets</value></property>
        <property name="namespaceUri"><value>http://www.w3.org/1999/XSL/Transform</value></property>
        <property name="transformerFactoryClassName"><value>org.apache.xalan.xsltc.trax.TransformerFactoryImpl</value></property>
        <property name="deployedDirectory"><value>@deploy.home@</value></property>
        <property name="blacklist">
            <!--
                The blacklist is a set of regular expressions that will be tested against the URI
                of any stylesheet requesting compiilation.
            -->
            <set>
                <value>.*groupsmanager.*</value>
                <value>.*portal.RunXSLT.merge.xsl</value>
            </set>
        </property>
    </bean>
</beans>
