<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <parent>
        <groupId>org.jasig.portal</groupId>
        <artifactId>uportal-parent</artifactId>
        <version>3.0.0</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.jasig.portal</groupId>
    <artifactId>uportal-ear</artifactId>
    <packaging>ear</packaging>

    <name>uPortal EAR</name>
    <description>The complete uPortal package including dependent portlets.</description>

    <dependencies>
        <dependency>
            <groupId>org.jasig.portal</groupId>
            <artifactId>uportal-war</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.jasig.portal.portlets-overlay</groupId>
            <artifactId>cas</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.jasig.portal.portlets-overlay</groupId>
            <artifactId>BookmarksPortlet</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>
        
        <dependency>
            <groupId>org.jasig.portal.portlets-overlay</groupId>
            <artifactId>googleportlet</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.jasig.portal.portlets-overlay</groupId>
            <artifactId>RssPortlet</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>org.jasig.portal.portlets-overlay</groupId>
            <artifactId>pluto-testsuite</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>
        
        <dependency>
            <groupId>org.jasig.portal.portlets-overlay</groupId>
            <artifactId>FunctionalTestsPortlet</artifactId>
            <version>${pom.parent.version}</version>
            <type>war</type>
        </dependency>

        <dependency>
            <groupId>javax.portlet</groupId>
            <artifactId>portlet-api</artifactId>
            <version>${portlet-api.version}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.pluto</groupId>
            <artifactId>pluto-container</artifactId>
            <version>${pluto.version}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.pluto</groupId>
            <artifactId>pluto-descriptor-api</artifactId>
            <version>${pluto.version}</version>
            <scope>compile</scope>
        </dependency>

        <dependency>
            <groupId>org.apache.pluto</groupId>
            <artifactId>pluto-descriptor-impl</artifactId>
            <version>${pluto.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging-api</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>cglib</groupId>
                    <artifactId>cglib-full</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>xerces</groupId>
                    <artifactId>xercesImpl</artifactId>
                </exclusion>
                <exclusion>
                    <groupId>xerces</groupId>
                    <artifactId>xmlParserAPIs</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.apache.pluto</groupId>
            <artifactId>pluto-taglib</artifactId>
            <version>${pluto.version}</version>
            <scope>compile</scope>
            <exclusions>
                <exclusion>
                    <groupId>commons-logging</groupId>
                    <artifactId>commons-logging-api</artifactId>
                </exclusion>
            </exclusions>
        </dependency>

        <dependency>
            <groupId>org.jasig.service</groupId>
            <artifactId>person-directory-api</artifactId>
            <version>${person-directory.version}</version>
            <scope>compile</scope>
        </dependency>
    </dependencies>

    <build>
        <finalName>${uportal.docbase}</finalName>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>${maven-ear-plugin.version}</version>
                <configuration>
                    <modules>
                        <webModule>
                            <groupId>org.jasig.portal</groupId>
                            <artifactId>uportal-war</artifactId>
                            <bundleFileName>${uportal.docbase}.war</bundleFileName>
                            <contextRoot>/${uportal.docbase}</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.jasig.portal.portlets-overlay</groupId>
                            <artifactId>cas</artifactId>
                            <bundleFileName>cas.war</bundleFileName>
                            <contextRoot>/cas</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.jasig.portal.portlets-overlay</groupId>
                            <artifactId>BookmarksPortlet</artifactId>
                            <bundleFileName>BookmarksPortlet.war</bundleFileName>
                            <contextRoot>/BookmarksPortlet</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.jasig.portal.portlets-overlay</groupId>
                            <artifactId>googleportlet</artifactId>
                            <bundleFileName>googleportlet.war</bundleFileName>
                            <contextRoot>/googleportlet</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.jasig.portal.portlets-overlay</groupId>
                            <artifactId>RssPortlet</artifactId>
                            <bundleFileName>RssPortlet.war</bundleFileName>
                            <contextRoot>/RssPortlet</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.jasig.portal.portlets-overlay</groupId>
                            <artifactId>pluto-testsuite</artifactId>
                            <bundleFileName>pluto-testsuite.war</bundleFileName>
                            <contextRoot>/pluto-testsuite</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.jasig.portal.portlets-overlay</groupId>
                            <artifactId>FunctionalTestsPortlet</artifactId>
                            <bundleFileName>FunctionalTestsPortlet.war</bundleFileName>
                            <contextRoot>/FunctionalTestsPortlet</contextRoot>
                        </webModule>
                    </modules>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
