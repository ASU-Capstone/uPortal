                                                <log logger-name="org.jasig.portal.io.import" level="error" exception="${Attributes.EXCEPTION}">Failed to import User from:  ${Attributes.LOCATION} due to exception</log>
                                            </catch>
                                        </handle-error>
                                    </concurrent>
                                </if>
                            </file-iterator>
                        </thread-pool>
        
