                                                <echo-ln>Import User:  ${Attributes.LOCATION}</echo-ln>
                                                <with-attribute key="Attributes.NODE" value="${parseXml(${Attributes.LOCATION})}">
                                                    <crn location="${valueOf(@script)}"/>
                                                </with-attribute>
                                            </try>
                                            <catch>
