<!-- 
 | Expects a parameter named LAYOUT_USER_NAME
 |
 | Returns a Document that is the limitied-layout of the user
 +-->
<cache key="Attributes.NODE" cache-key="${groovy('LOADED-LAYOUT.' + LAYOUT_USER_NAME)}">
    <factory>
        <!-- 
         | We have to 'cover' the existing USER_NAME with the 
         | LAYOUT_USER_NAME before calling lookup-user_id.crn 
         +-->
        <with-attribute key="USER_NAME" value="${LAYOUT_USER_NAME}">
            <with-attribute key="USER_ID" value="${crn(lookup-user_id.crn)}">
                <groovy>
                    <script>
                        import org.jasig.portal.UserProfile;
                        import org.jasig.portal.security.provider.PersonImpl;
                        import org.jasig.portal.security.provider.BrokenSecurityContext;
                        import org.dom4j.io.DOMReader;
                    
                        def person = new PersonImpl();
                        person.setUserName(LAYOUT_USER_NAME);
                        person.setID(USER_ID.intValue());
                        person.setSecurityContext(new BrokenSecurityContext());
                    
                        def layoutStore = layoutStoreProvider.getLayoutStore();
                        def profile = layoutStore.getUserProfileByFname(person, UserProfile.DEFAULT_PROFILE_FNAME);
                        def layoutElement = layoutStore.getUserLayout(person, profile);
                    
                        if (layoutElement != null) {
                            def reader = new DOMReader();
                            def dom4jLayoutElement = reader.read(layoutElement);
                        
                            ScriptAttributes.RESPONSE.setAttribute('Attributes.NODE', dom4jLayoutElement);
                        }
                    </script>
                    <subtasks>
                        <return value="${Attributes.NODE}"/>
                    </subtasks>
                </groovy>
            </with-attribute>
        </with-attribute>
    </factory>
    <subtasks>
        <return value="${Attributes.NODE}"/>
    </subtasks>
</cache>