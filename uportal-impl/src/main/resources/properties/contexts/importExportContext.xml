<beans xmlns="http://www.springframework.org/schema/beans" 
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:util="http://www.springframework.org/schema/util"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
                           http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-2.0.xsd">

    <bean id="layoutStoreProvider" class="org.jasig.portal.layout.dlm.LayoutStoreProvider">
        <property name="lookupNoderefTask" ref="lookup-dlm-noderef"/>
        <property name="lookupPathrefTask" ref="lookup-dlm-pathref"/>
    </bean>

    <bean id="lookup-dlm-noderef" class="org.danann.cernunnos.runtime.PojoTask">
        <property name="location">
            <value>classpath://org/jasig/portal/io/lookup-dlm-noderef.crn</value>
        </property>
        <property name="requestAttributes">
            <util:map>
                <entry key="Attributes.CACHE">
                    <bean class="org.jasig.portal.utils.cache.MapCacheFactoryBean">
                        <property name="cacheFactory" ref="cacheFactory" />
                        <property name="cacheName" value="org.jasig.portal.layout.dlm.NODEREF_CACHE" />
                    </bean>
                </entry>
                <entry key="Attributes.CACHE_MODEL">
                    <value>ALL</value>
                </entry>
                <entry key="SqlAttributes.DATA_SOURCE">
                    <ref bean="PortalDb"/>
                </entry>
                <entry key="SqlAttributes.TRANSACTION_MANAGER">
                    <ref bean="transactionManager"/>
                </entry>
            </util:map>
        </property>
    </bean>

    <bean id="lookup-dlm-pathref" class="org.danann.cernunnos.runtime.PojoTask">
        <property name="location">
            <value>classpath://org/jasig/portal/io/lookup-dlm-pathref.crn</value>
        </property>
        <property name="requestAttributes">
            <util:map>
                <entry key="Attributes.CACHE">
                    <bean class="org.jasig.portal.utils.cache.MapCacheFactoryBean">
                        <property name="cacheFactory" ref="cacheFactory" />
                        <property name="cacheName" value="org.jasig.portal.layout.dlm.NODEREF_CACHE" />
                    </bean>
                </entry>
                <entry key="Attributes.CACHE_MODEL">
                    <value>ALL</value>
                </entry>
                <entry key="SqlAttributes.DATA_SOURCE">
                    <ref bean="PortalDb"/>
                </entry>
                <entry key="SqlAttributes.TRANSACTION_MANAGER">
                    <ref bean="transactionManager"/>
                </entry>
            </util:map>
        </property>
    </bean>
    
    <bean id="portletEntityPreferenceHandler" class="org.jasig.portal.io.support.PortletEntityPreferenceHandler">
        <property name="dataSource" ref="PortalDb" />
        <property name="channelRegistryStore" ref="channelRegistryStore" />
        <property name="portletDefinitionRegistry" ref="portletDefinitionRegistry" />
        <property name="portletEntityRegistry" ref="portletEntityRegistry" />
    </bean>
</beans>