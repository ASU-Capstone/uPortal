<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">           

    <!-- 
     | Search entities for multiple results by a search string
     +-->
    <bean name="/searchEntities"
        class="org.jasig.portal.layout.dlm.remoting.SearchEntitiesController">
        <property name="groupListHelper" ref="groupListHelper"/>
        <property name="personManager" ref="personManager"/>
    </bean>

    <!-- 
     | Find a single entity by ID and type
     +-->
    <bean name="/findEntity"
        class="org.jasig.portal.layout.dlm.remoting.FindEntityController">
        <property name="groupListHelper" ref="groupListHelper"/>
        <property name="personManager" ref="personManager"/>
    </bean>
    
    <!-- 
     | Channel registry list
     +-->
    <bean name="/channelList"
        class="org.jasig.portal.layout.dlm.remoting.ChannelListController">
        <property name="channelRegistryStore" ref="channelRegistryStore"/>
        <property name="personManager" ref="personManager"/>
    </bean>

    <!-- 
     | Fragment definition list
     +-->
    <bean name="/fragmentList"
        class="org.jasig.portal.layout.dlm.remoting.FragmentListController">
        <property name="configurationLoader" ref="dlmConfigurationLoader"/>
        <property name="personManager" ref="personManager"/>
        <property name="channelRegistryStore" ref="channelRegistryStore"/>
    </bean>

    <!-- 
     | Portlet subscribe/remove statistics
     +-->
    <bean name="/userLayoutModificationsCounts"
        class="org.jasig.portal.rest.StatsLayoutModificationsController">
        <property name="dataSource" ref="PortalDb"/>
        <property name="maxDays" value="365"/>
        <property name="personManager" ref="personManager"/>
        <property name="cacheFactory" ref="cacheFactory"/>
    </bean>

</beans>