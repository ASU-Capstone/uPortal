<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.generate_statistics">true</property>
        
        <property name="hibernate.cache.use_query_cache">true</property>
        <property name="hibernate.cache.use_second_level_cache">true</property>
        <property name="hibernate.cache.region_prefix">PortalStats</property>
        <property name="hibernate.jdbc.batch_size">25</property>
        
        <property name="hibernate.current_session_context_class">thread</property>
        
        <mapping resource="properties/db/stats/portalEvents.hbm.xml"/>

        <class-cache class="org.jasig.portal.events.EventType" usage="read-only"/>
        <class-cache class="org.jasig.portal.events.handlers.db.StatsSession" usage="read-write"/>
    </session-factory>
</hibernate-configuration>
